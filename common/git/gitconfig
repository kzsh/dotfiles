[include]
	path = ~/.gitconfig-work
[alias]
	st = status
	co = checkout
	cm = checkout master
	cd = checkout develop
	cp = cherry-pick
	edit = !~/.dotfiles/common/scripts/bash/git/git-edit.sh
	browse-pulls = !hub browse -- pulls
	pulls = !hub browse -- pulls
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	ln = log --graph --pretty=format:'%Cgreen%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lc = log-compact
	wip = !"$COMMON_SCRIPTS"/bash/git/wip.sh
	prs = !~/.dotfiles/common/scripts/bash/git/git-prs 
[branch]
	autosetuprebase = always
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
[push]
	default = simple

# Colorize command outputs
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	renames = true
	tool = vimdiff
[mergetool]
	keepBackup = true
[http]
	sslVerify = true
[color "diff"]
	;frag = cyan
	;new = green
	; sources my email address and
	; other [user] config
[include]
	path = ~/.gituser
[log-compact]
	defaults = --two-initials --abbrev=8
[pull]
	rebase = true
[interactive]
	diffFilter = diff-highlight
[difftool]
	prompt = false
